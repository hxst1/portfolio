---
import Layout from "../layouts/Layout.astro";
import works from "../data/works.json";

const { id } = Astro.params;
const work = works[id];

export function getStaticPaths() {
  const paths = Object.keys(works).map(jobId => ({ params: { id: jobId } }));
  return paths;
}
---

<Layout title={work.name}>
  <div class="transitionFade pt-24 text-pretty mx-auto overflow-hidden flex flex-col md:flex-row justify-center items-stretch md:justify-start">
    <div class="bg-black/60 shadow-md shadow-black/60  w-full md:w-56 flex-shrink-0 flex items-center justify-center p-5 md:p-3 rounded-lg md:mr-10 mb-5 md:mb-0">
        <img src={work.image} alt={`Imagen de ${work.name}`} class="w-24 h-auto max-w-full" />
    </div>
    <div class="bg-black/60 shadow-md shadow-black/60 rounded-lg w-full">
      <div class="p-8">
        <div class="uppercase tracking-wide text-sm text-indigo-500 font-semibold">{work.position}</div>
        <h2 class="block mt-1 text-xl leading-tight font-medium text-white hover:underline">{work.name}</h2>
        <p class="mt-2 text-gray-500">{work.description}</p>
        <div class="mt-4">
          {work.technologies.map((tec) => (
            <span class="inline-block bg-gray-200 rounded-lg px-3 py-1 text-sm font-semibold text-gray-700 mr-2 mb-2">{tec}</span>
          ))}
        </div>
      </div>
    </div>
  </div>

  <div class="transitionFade mt-6 text-pretty">
    <h2 class="text-2xl font-semibold text-center">Projects</h2>
    <ul>
      {work.projects.map((proyecto) => (
        <li class="mt-6 bg-black/60 shadow-sm shadow-black/60 p-5 rounded-xl">
          <div class="flex items-center justify-between">
            <h1 class="text-xl font-semibold">{proyecto.name}</h1>
          </div>
          <span class="h-[1px] w-full my-5 justify-center bg-white/40 block"></span> 
          <p>{proyecto.description}</p>
        </li>
      ))}
    </ul>
  </div>
</Layout>

<style>
  .transitionFade{
    animation: fadeIn 0.2s ease-in-out;
  }
</style>