---
import HeaderButtons from "./HeaderButtons.astro";
import { getIcon } from "../utils/getIcon.js";
---

<header class="py-5 px-5 mx-auto max-w-5xl lg:py-8 lg:px-6 fixed left-0 right-0 z-50" id="header">
    <div class="flex justify-center items-center">
        <div class="flex items-center bg-black/60 rounded-3xl p-2 backdrop-blur-sm">
            <HeaderButtons nav="#about" set:html={getIcon('about', "<span class='hidden sm:inline'>About</span>")} />
            <HeaderButtons nav="#works" set:html={getIcon('jobs', "<span class='hidden sm:inline'>Jobs</span>")} />
            <HeaderButtons nav="#projects" set:html={getIcon('projects', "<span class='hidden sm:inline'>Projects</span>")} />
            <HeaderButtons nav="#contact" set:html={getIcon('links', "<span class='hidden sm:inline'>Contact</span>")} />
        </div>
    </div>
</header>

<style>
  header {
    animation: slideDown 0.3s ease-out;
  }
  @keyframes slideDown {
  from {
    transform: translateY(-100%);
    opacity: 0;
  }
  to {
    transform: translateY(0);
    opacity: 1;
  }
}

</style>