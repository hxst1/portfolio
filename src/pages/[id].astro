---
import Layout from "../layouts/Layout.astro";
import works from "../data/works.json";

const { id } = Astro.params;
const work = works[id];

export function getStaticPaths() {
  const paths = Object.keys(works).map(jobId => ({ params: { id: jobId } }));
  return paths;
}
---

<Layout title={work.name}>
  <div class="mx-auto rounded-xl shadow-md overflow-hidden flex flex-col md:flex-row justify-center items-center md:justify-start md:items-start">
    <div class="bg-black mb-10 md:mb-0 border-2 w-full md:w-56 min-h-56 flex items-center justify-center p-3 rounded-2xl md:mr-10">
        <img src={work.image} alt={`Imagen de ${work.name}`} class="w-24 absolute max-w-full max-h-full" />
     </div>
    <div class="md:flex border-white border-2	rounded-xl bg-black w-full md:max-w-2xl md:min-h-[224px]">
      <div class="p-8">
        <div class="uppercase tracking-wide text-sm text-indigo-500 font-semibold">{work.position}</div>
        <h2 class="block mt-1 text-xl leading-tight font-medium text-white hover:underline">{work.name}</h2>
        <p class="mt-2 text-gray-500">{work.description}</p>
        <div class="mt-4">
          <span class="text-gray-500">Technologies: </span>
          {work.technologies.map((tec) => (
            <span class="inline-block bg-gray-200 rounded-full px-3 py-1 text-sm font-semibold text-gray-700 mr-2 mb-2">{tec}</span>
          ))}
        </div>
      </div>
    </div>
  </div>

  <div class="mt-6">
    <h2 class="text-2xl font-semibold text-center">Projects</h2>
    <ul>
      {work.projects.map((proyecto) => (
        <li class="mt-6 bg-black p-5 rounded-xl border-2 ">
          <div class="flex items-center justify-between">
            <h1 class="text-xl font-semibold">{proyecto.name}</h1>
          </div>
          <span class="h-[1px] w-full my-5 justify-center bg-white/40 block"></span> 
          <p>{proyecto.description}</p>
        </li>
      ))}
    </ul>
  </div>
</Layout>
